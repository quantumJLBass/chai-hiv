<table  width="100%" class="ui-widget ui-widget-content">
  <thead>
    <tr class="ui-widget-header ">
      #*<th>Id</th>*#
    <th>Story</th>
    <th>Comments</th>
    <th>Flagged</th>
    <th>Published</th>
    <th>Created</th>
    #*<th>Update Time</th>*#
    <th>Deleted</th>
    #*<th>NID</th>*#
    
    <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>

    #set ($c=0)
    #foreach($comment in $comments)
    <tr class="#if($c%2>0) even #else odd #end #if($comment.adminRead==false) ui-state-highlight #end ">
      #*<td>$!comment.Id</td>*#
      <td>$!comment.Story.Id <a href="$siteroot/read/$!{comment.Story.CustomUrl}#com_$!{comment.Id}" target="_blank" title="View in story" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
              <span class="ui-button-icon-primary ui-icon ui-icon-search"> </span>
            </a></td>
      <td>$Text.Fold($HtmlService.StripHtml($!comment.Comments,false),100)</td>
      <td #if($comment.Flagged==true) class="ui-state-error" #end>$!comment.Flagged</td>
      <td>$!comment.published</td>
      

      <td>$Text.Fold($HtmlService.StripHtml($!comment.CreateTime.ToString(),false),11).Replace('&hellip;','')</td>
      #*<td>$!comment.UpdateTime</td>*#
      <td>$!comment.Deleted</td>
      #*<td>$!comment.Nid</td>*#

      <td class='actionArea'>

        <span style='font-size:0.7em;'>
          <a href="edit.castle?id=$!{comment.Id}" title="Edit" class="button small">
            <span class="ui-icon ui-icon-pencil"></span>
          </a>
          <a href="delete.castle?id=$!{comment.Id}" title="Delete" #*onclick="return confirm('Are you sure you want to Delete?(Y/N)?')"*# class="button small">
            <span class="ui-icon ui-icon-trash"></span>
          </a>
        </span>
      </td>
    </tr>
    #set ($c=$c+1)
    #end
  </tbody>
</table>



